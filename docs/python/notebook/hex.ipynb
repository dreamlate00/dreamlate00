    "import binascii\n",
    "\n",
    "def encode_to_hex(string):\n",
    "    encoded_bytes = string.encode('utf-8')\n",
    "    hex_string = binascii.hexlify(encoded_bytes).decode('utf-8')\n",
    "    return hex_string\n",
    "\n",
    "# 示例用法\n",
    "input_string = \"Hello, World!\"\n",
    "encoded_string = encode_to_hex(input_string)\n",
    "print(encoded_string)"
   ]
  }
